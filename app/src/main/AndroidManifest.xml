        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MyTextViewActivity"
            android:label="@string/title_activity_my_text_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activity.ShineTextViewActivity"
            android:label="@string/title_activity_shine_text_view"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activity.TopBarActivity"
            android:label="@string/title_activity_top_bar"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".activity.CircleProgressViewActivity" >
        </activity>
        <activity android:name=".activity.VolumeViewActivity" >
        </activity>
        <activity android:name=".activity.ScrollViewActivity" >
        </activity>
