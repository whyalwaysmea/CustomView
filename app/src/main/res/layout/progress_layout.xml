<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.whyalwaysmea.myview.progressbar.HorizontalProgressBar
        android:id="@+id/progress"
        app:progress_reached_height="15dp"
        app:progress_unreached_height="5dp"
        app:progress_text_size="28sp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.whyalwaysmea.myview.progressbar.RoundProgressBarWithNumber
        android:id="@+id/round_progress"
        android:layout_marginTop="50dip"
        android:padding="5dp"
        app:radius="120dp"
        app:progress_text_size="14sp"
        android:layout_gravity="center_horizontal"
        app:progress_reached_height="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>